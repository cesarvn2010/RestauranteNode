<!-- views/pratos.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title><%= pagina.title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="container">  
    <header>
        <% include ../partials/header %>
    </header>
    <row>
      <container>
        <main>
      
          <h1><%= pagina.title %></h1>
          <div class="filtro">
              <fieldset><legend>Filtros</legend>
                <form style="padding: 10px">
                    Nome:<br><input name="nome"><br><br>
                    <button type="button" class="btn btn-primary" type="submit">
                      <img src="/images/pesquisar.png" style="width: 20px; height: 20px"/> Pesquisar
                    </button>
                    <button type="button" class="btn btn-secondary">
                      <!--<a href="/pratos/newPrato" style="color: white; ">Cadastrar novo prato.</a>-->
                      <a href="/pratos/newPrato" style="color: white; "><%= pagina.value %></a>
                    </button>
                </form>
              </fieldset>
            </container>
            <br>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col">Nome do Prato</th>
                <th scope="col">Pre√ßo</th>
              </tr>
            </thead>
            <tbody>
              <% docs.forEach(function(prato){ %>
              <tr>
                  <td><a href="/pratos/editPrato/<%= prato._id %>">
                    <img src="/images/editar.png" style="width: 20px; height: 20px;"/></a>
                  </td>
                  <td><a href="/pratos/deletePrato/<%= prato._id %>">
                    <img src="/images/excluir.png" style="width: 20px; height: 20px;"/></a></td>
                  <td><%= prato.nomePrato %></td>
                  <td><%= prato.preco %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <hr />
            <br>
            
        </main>
      </container>
    </row>
    <footer>
        <% include ../partials/footer %>
    </footer>
  </body>
</html>
